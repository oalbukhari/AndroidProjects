<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="542dp"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:text="Nome:"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:textStyle="normal|bold|italic"
            android:textColor="?android:attr/colorPrimaryDark" />

        <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/detailName"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textAlignment="textStart"
            android:gravity="center_vertical"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:text="Cognome:"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:textStyle="normal|bold|italic"
            android:textColor="?android:attr/colorPrimaryDark" />

        <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/detailSurname"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textAlignment="textStart"
            android:gravity="center_vertical"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:text="Età:"
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:textStyle="normal|bold|italic"
            android:textColor="?android:attr/colorPrimaryDark" />

        <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/detailAge"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textAlignment="textStart"
            android:gravity="center_vertical"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:text="Indirizzo:"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:textStyle="normal|bold|italic"
            android:textColor="?android:attr/colorPrimaryDark" />

        <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/detailAddres"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textAlignment="textStart"
            android:gravity="center_vertical"
            android:textColor="@android:color/black" />
    </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:text="Città:"
                android:layout_width="0dp"
                android:layout_height="43dp"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textAlignment="center"
                android:gravity="center_vertical"
                android:textStyle="normal|bold|italic"
                android:textColor="?android:attr/colorPrimaryDark" />

            <TextView
                android:text="TextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/detailCity"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textAlignment="textStart"
                android:gravity="center_vertical"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
            android:layout_height="60dp">

        <TextView
            android:text="Provincia:"
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:textStyle="normal|bold|italic"
            android:textColor="?android:attr/colorPrimaryDark" />

        <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/detailProvince"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textAlignment="textStart"
            android:gravity="center_vertical"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:text="CAP:"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:textStyle="normal|bold|italic"
            android:textColor="?android:attr/colorPrimaryDark" />

        <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/detailCAP"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textAlignment="textStart"
            android:gravity="center_vertical"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:text="E-mail:"
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:textStyle="normal|bold|italic"
            android:textColor="?android:attr/colorPrimaryDark" />

        <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/detailEmail"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textAlignment="textStart"
            android:gravity="center_vertical"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:text="Telefono:"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:textStyle="normal|bold|italic"
            android:textColor="?android:attr/colorPrimaryDark" />

        <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/detailPhone"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textAlignment="textStart"
            android:gravity="center_vertical"
            android:textColor="@android:color/black" />
    </LinearLayout>
</LinearLayout>

</LinearLayout>